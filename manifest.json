{
  "manifest_version": 3,
  "name": "YouTube Video Script",
  "version": "1.0",
  "description": "A script that automates actions on YouTube video pages.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/watch*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}